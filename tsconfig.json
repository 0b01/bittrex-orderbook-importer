{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [ "node "],
        "paths": {
            "*": ["./node_modules/@types/*", "*"]
        }
    },
    "include": [
        "./db/**/*",
        "./src/**/*"
    ]
}
